<html>
  <head>
    <title>DATADAYZ</title>
    <%= stylesheet_link_tag "data_dayz" %>
    <%= javascript_include_tag "data_dayz" %>

  </head>
  <body>
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/ja_JP/all.js#xfbml=1";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
    <audio id="negi_trap" src="http://radio.datafruits.fm:8000/datafruits.mp3" autoplay loop>
      Your browser does not support the <code>audio</code> element.
    </audio>
    <div id="spreadsheet">
    </div>

    <img id="branding" src="/images/datadayz.png" alt='DATADAYZ'>

    <div id="social">
      <a href="https://twitter.com/share" class="twitter-share-button" data-via="datafruits" data-hashtags="datadayz">Tweet</a>
      <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
      <div class="fb-like" data-href="http://www.datafruits.fm/data_dayz" data-width="The pixel width of the plugin" data-height="The pixel height of the plugin" data-colorscheme="light" data-layout="button_count" data-action="like" data-show-faces="false" data-send="false"></div>
    </div>

    <div id="mute" alt="mute">♪</div>

    <ul id="lineup">
      <% @lineup.each do |user| %>
        <li><%= link_to user.username.upcase, user %></li>
      <% end %>
    </ul>

    <h3>GUEST MIXES</h3>
    <ul id="lineup">
      <% @guest_mixes.each do |guest_mix| %>
        <li><%= guest_mix.upcase %></li>
      <% end %>
    </ul>

    <span>listen here →</span>
    <a href="http://datafruits.fm"><%= image_tag asset_path("df_new_logo_1.png") %></a>

    <h1 style="float:right;">DATADAYZ</H1>

    <h3>TIMETABLE</h3>
    <table id="timetable">
      <tbody>
      <% @slots.each do |show| %>
        <tr class="<%=cycle("even","odd")%>">
          <td><%= show.time.strftime("%m月%d日") %></td>
          <td><%= "#{show.time.strftime("%H:%M %Z")}" %></td>
          <td><%= show.end_time.strftime("%H:%M %Z") %></td>
          <% if !show.guests.blank? %>
            <td><%= link_to "#{show.user.username} - #{show.guests}", show %></td>
          <% else %>
            <td><%= link_to show.user.username, show %></td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>

    <div id="scroll-container">
    </div>
  </body>
</html>
