<% show = next_scheduled_show %>
<% if show %>
  NEXT ONAIR: <%= link_to_show show %>
  <br/ >
  <% if show.image? %>
    <%= image_tag show.image(:thumb) %>
  <% elsif !show.user.avatar.blank? %>
    <%= image_tag show.user.avatar(:thumb) %>
  <% end %>
  <br />
  <%= link_to_show_with_time(show) %>
<% end %>
