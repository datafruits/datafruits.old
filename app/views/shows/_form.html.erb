<%= form_for(@show) do |f| %>
  <% if @show.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@show.errors.count, "error") %> prohibited this show from being saved:</h2>

      <ul>
      <% @show.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :time %><br />
    <%= f.datetime_select :time %>
  </div>
  <div class="field">
    <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.all.sort, :default=>current_user.time_zone %>
  </div>
  <div class="field">
    <%= f.label "Description (optional)" %>
    <br/>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.file_field :image %>
  </div>

  <% if current_user.admin? %>
    <%= f.label :dj %>
    <%= f.select(:user_id, User.all.collect {|u| [ u.username, u.id ] }) %>
  <% else %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  <% end %>
  <div class="actions">
    <%= f.submit 'Submit', id: 'submit' %>
  </div>
<% end %>

<br />
<%= link_to 'Cancel show', @show, :method => :delete, data: { confirm: 'Are you sure you want to cancel this broadcast?' } %>
