<%= form_for(@show) do |f| %>
  <% if @show.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@show.errors.count, "error") %> prohibited this show from being saved:</h2>

      <ul>
      <% @show.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :time %><br />
    <%= f.datetime_select :time %>
  </div>

  <%= f.hidden_field :user_id %>
  <div class="actions">
    <%= f.submit 'Submit', id: 'submit' %>
  </div>
<% end %>

<br />
<%= link_to 'Cancel show', @show, :method => :delete, :confirm => "Are you sure you want to cancel this broadcast?" %>
