<h2><%= t('.sign_in', :default => "Sign in") %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :login %><br />
  <%= f.text_field :login, placeholder: t('.login_placeholder') %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, placeholder: t('.password_placeholder') %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit t('.sign_in', :default => "Sign in") %></div>
<% end %>

<%= render "devise/shared/links" %>
