<h2><%= t('.sign_up', :default => "Sign up") %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= render partial: 'devise/shared/user_fields', locals: {form: f } %>

  <div><%= f.label t('.password') %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label t('.password_confirmation') %><br />
  <%= f.password_field :password_confirmation %></div>


  <div><%= f.submit t('.sign_up', :default => "Sign up"), id: 'submit' %></div>
<% end %>

<%= render "devise/shared/links" %>
